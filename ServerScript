local ServerStorage = game:GetService("ServerStorage")
local ReplicatedFirst = game:GetService("ReplicatedFirst")

-- Função para procurar recursivamente no ServerStorage
local function findItem(parent, itemName)
    for _, child in ipairs(parent:GetDescendants()) do
        if child.Name == itemName then
            return child
        end
    end
    return nil
end

-- Nome do item a procurar
local itemName = "W25 Christmas Ribbon Skirt"

-- Procurar o item
local item = findItem(ServerStorage, itemName)

if item then
    print("Item encontrado: " .. item:GetFullName())
    
    -- Clonar o item
    local clonedItem = item:Clone()
    
    -- Mover para ReplicatedFirst
    clonedItem.Parent = ReplicatedFirst
    
    print("Item clonado com sucesso para ReplicatedFirst!")
else
    warn("Item '" .. itemName .. "' não foi encontrado no ServerStorage")
end
